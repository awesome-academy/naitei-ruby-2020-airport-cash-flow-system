<%# <% provide(:title, t(".title_page")) %>
<%= render "static_pages/header" %>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <%= form_for :session, url: login_path, html: {class: "form-signin"} do |f| %>
            <div class="form-label-group">
              <%= f.email_field :email, class: "form-control", placeholer: "Email address" %>
              <%= f.label :email, t(".email_label") %>
            </div>
            <div class="form-label-group">
              <%= f.password_field :password, class: "form-control", placeholer: "Password", autocomplete: "on" %>
              <%= f.label :password, t(".password_label") %>
            </div>
            <%= f.submit t(".btn_label"), class: "btn btn-lg btn-primary btn-block text-uppercase" %>
            <hr class="my-4">
            <%= button_tag( :class => "btn btn-lg btn-block text-uppercase", :id => "btn-facebook") do %>
              <%= t ".btn_login_aws" %>  <%= image_tag Settings.image.link_logo_wsm, alt: "wsm-logo", width: Settings.image.link_logo_wsm_size, height: Settings.image.link_logo_wsm_size %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
