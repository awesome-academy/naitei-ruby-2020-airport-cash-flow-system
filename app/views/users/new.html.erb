<div class="d-flex justify-content-center">
  <div class="w-50">
    <h1><%= t ".title_page" %></h1>
    <div>
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.label :name, t(".name_label") %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :email, t(".email_label") %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :role_id, t(".role_label") %>
        <%= f.collection_select :role_id, Role.all, :id, :name_initial, {prompt: true}, {class: "form-control"} %>
        <%= f.label :section_id, t(".section_label") %>
        <%= f.collection_select :section_id, Section.all, :id, :name_initial, {prompt: true}, {class: "form-control"} %>
        <%= f.label :password, t(".password_label") %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :password_confirmation, t(".confirmation_label") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <%= f.submit "Sign Up", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
